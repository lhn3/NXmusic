/* components/musicList-hd/index.wxss */
.header{
    position: relative;
    width: 100%;
    height: 400rpx;
    color: #ffffff;
    margin-bottom: 20rpx;
}
.coverImgUrl{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
}
/* 遮罩层样式 */
.cover{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(3px);
}
.info{
    box-sizing: border-box;
    position: absolute;
    top: 0;
    display: flex;
    width: 100%;
    height: 300rpx;
    padding: 60rpx 40rpx;
}
.musicAvatar{
    width: 200rpx;
    height: 200rpx;
    margin-right: 40rpx;    
}
.userInfo{
    flex: 1;
    width: 100rpx;
}
.title{
    font-size: 30rpx;
    font-weight: bold;
    overflow:hidden;
    /* 显示两行 */
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -moz-box;
    -moz-line-clamp:2;
    -moz-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal;
    overflow: hidden;
}
.user{
    display: flex;
    justify-content: left;
    margin: 10rpx 0;
}
.avatar{
    width: 60rpx;
    height: 60rpx;  
    border-radius: 50%;
    margin-right: 10rpx;
}
.username{
    display: inline-block;
    font-size: 24rpx;
    line-height: 60rpx;
}
.introduce{
    font-size: 22rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.control{
    display: flex;
    /* justify-content: space-between; */
    position: absolute;
    height: 70rpx;
    bottom: 30rpx;
}
.like, .share{
    width: 375rpx;
    text-align: center;
    line-height: 70rpx;
}
.like-img, .share-img{
    width: 45rpx;
    margin-right: 10rpx;
    vertical-align: middle;
} 
.like-text, .share-text{
    font-size: 25rpx;
}

