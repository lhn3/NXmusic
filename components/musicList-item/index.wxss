/* components/musicList-item/index.wxss */

.music-list{
    display: flex;
    justify-content: left;
    width: 100%;
    height: 110rpx;
    background-color: #fff;
    margin: 20rpx 0;
}
.number{
    text-align: center;
    line-height: 110rpx;
    font-size: 30rpx;
    font-weight: bold;
    height: 100%;
    width: 50rpx;
    margin-right: 20rpx;
}
.title{
    font-size: 30rpx;
    font-weight: bold;
    line-height: 60rpx;
}
.info{
    font-size: 24rpx;
    color: #8a8a8a;
}