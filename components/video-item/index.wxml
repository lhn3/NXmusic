<!--components/video-item/index.wxml-->

<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="item">
    <view class="album">
        <image class="image" src="{{item.cover}}" mode="widthFix"></image>
        <view class="info">
            <view class="count">{{format.formatCount(item.playCount)}}</view>  
            <view class="time">{{format.formatTime(item.mv.videos[0].duration)}}</view>
        </view>
    </view>
    <view class="content">
        {{item.name}} - {{item.artistName}}
    </view>
</view>

