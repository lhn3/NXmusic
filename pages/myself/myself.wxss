/* pages/myself/myself.wxss */

.top{
    position: relative;
    width: 100%;
    height: 450rpx;
}
.back{
    position:absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
}
.cover{
    top: 0; 
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    position:absolute;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(3px);
}
.info{
    display:flex;
    flex-direction: column;
    justify-content: left;
    align-items: center;
}
.avatar{ 
    margin-top: 60rpx;
    height: 220rpx;
    width: 220rpx;
    border-radius: 50%;
}
.username{
    font-size: 40rpx;
    font-weight: bold;
    line-height: 100rpx;
    color: #ffffff;
}
.h{
    height: 44px;
}